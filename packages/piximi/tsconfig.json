{
  "extends": "../../tsconfig",
  "exclude": ["src/setupTests.ts", "src/**/*.stories.tsx", "src/**/*.test.tsx"],
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "compilerOptions": {
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "references": [
    {"path": "../@piximi/components"},
    {"path": "../@piximi/gallery-dialog"},
    {"path": "../@piximi/hooks"},
    {"path": "../@piximi/navigation-drawer"},
    {"path": "../@piximi/store"},
    {"path": "../@piximi/translations"},
    {"path": "../@piximi/types"}
  ]
}
