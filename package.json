{
  "bugs": "https://github.com/piximi/piximi/issues",
  "devDependencies": {
    "husky": "^4.0.0-beta.5",
    "lerna": "^3.19.0",
    "lint-staged": "^10.0.0-beta.7",
    "prettier": "^1.19.1"
  },
  "name": "@piximi/piximi",
  "private": true,
  "repository": "https://github.com/piximi/piximi.git",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "tsc --build ./packages/tsconfig.json",
    "clean": "lerna clean --yes && lerna run clean",
    "compile": "tsc -b packages/@piximi/hooks",
    "lint-staged": "lint-staged",
    "prettier": "prettier .prettierrc --write '**/*.+(css|js|jsx|ts|tsx)'",
    "test": "lerna run test"
  },
  "workspaces": [
    "packages/@piximi/*",
    "packages/piximi"
  ]
}
